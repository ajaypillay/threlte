{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$pages/*": ["src/pages/*"],
      "$styles/*": ["src/styles/*"],
      "$assets/*": ["src/assets/*"],
      "$examples/*": ["src/examples/*"],
      "$hooks/*": ["src/hooks/*"]
    },
    "types": ["@astrojs/image/client"]
  },
  "exclude": ["node_modules", "src/components/Example/stackblitz-template"]
}
